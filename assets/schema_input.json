{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/nf-core/rnaseq/master/schema_input.json",
    "title": "nf-core/rnaseq pipeline - params.input schema",
    "description": "Schema for the file provided with params.input",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "sample": {
                "type": "string",
                "pattern": "^\\S+$",
                "errorMessage": "Sample name must not be empty or contain spaces"
            },
            "fastq_1": {
                "type": "string",
                "pattern": "^\\S+\\.f(ast)?q\\.gz$",
                "errorMessage": "Filename must not be empty or contain spaces and must have extension '.fa.gz' or '.fastq.gz'"
            },
            "fastq_2": {
                "errorMessage": "Filename must not contain spaces and must have extension '.fa.gz' or '.fastq.gz'",
                "anyOf": [
                    {
                        "type": "string",
                        "pattern": "^\\S+\\.f(ast)?q\\.gz$"
                    },
                    {
                        "type": "string",
                        "maxLength": 0
                    }
                ]
            },
            "strandedness": {
                "type": "string",
                "enum": [
                    "forward",
                    "reverse",
                    "unstranded"
                ]
            }
        },
        "required": [
            "sample",
            "fastq_1",
            "strandedness"
        ]
    }
}
